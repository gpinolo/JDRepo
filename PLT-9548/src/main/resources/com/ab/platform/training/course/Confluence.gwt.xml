<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0//EN"
        "http://google-web-toolkit.googlecode.com/svn/releases/2.0/distro-source/core/src/gwt-module.dtd">
<module>

    <inherits name='com.google.gwt.user.User'/>

    <inherits name='com.ab.oneleo.uis.gwt.UisCommonGWTLayout' />
    <inherits name='com.ab.oneleo.uis.gwt.UisCommonGWTApiClient' />
    <inherits name='com.ab.oneleo.uis.gwt.UisCommonGwtApiShared' />
    <inherits name='com.ab.oneleo.uis.gwt.UisCommonGWTSupersource' />

    <inherits name='com.google.gwt.junit.JUnit' />


    <!-- Logging configuration -->
    <inherits name="com.google.gwt.logging.Logging" />
    <set-property name="gwt.logging.simpleRemoteHandler" value="ENABLED" />

    <entry-point class='com.ab.platform.training.course.client.confluence.ConfluenceEntryPoint'/>

    <!-- Specify the paths for translatable code -->
    <source path='client' />
    <source path='shared' />
    <source path='print' />

    <source path='resources' />
    <public path="resources">
        <exclude name="** /*.java" />
        <exclude name="** /*.class" />
    </public>
</module>
